<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Text:</strong>
  <%= raw RedCloth.new(@post.text).to_html %>
</p>

<h3>Comments</h3>
<%= render @post.comments %>
<%= render "blogengine/comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
